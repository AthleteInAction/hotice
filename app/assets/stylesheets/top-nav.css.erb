div.top-nav {
	display: table;
	border-spacing: 0;
	border-collapse: separate;
	height: 50px;
}
div.top-nav div.top-item {
	display: table-cell;
	padding: 10px;
	vertical-align: middle;
	text-align: left;
}

div.top-nav div.top-item span.count {
	position: absolute;
	z-index: 10000;
	display: table;
	border-spacing: 0;
	border-collapse: separate;
	height: 15px;
	width: 15px;
	margin-left: 14px;
	margin-top: -3px;
	background: url(<%= asset_path 'icon-count.png' %>) center center no-repeat;
}
div.top-nav div.top-item span.count span {
	display: table-cell;
	vertical-align: middle;
	text-align: center;
	color: #FFF;
	font-size: 9px;
}

div.top-nav div.top-item a.messages {
	display: block;
	height: 24px;
	width: 24px;
	background-image: url(<%= asset_path 'top-icon-messages.png' %>);
	background-position: center center;
	background-repeat: no-repeat;
	background-size: 24px;
}
div.top-nav div.top-item a.info {
	display: block;
	height: 24px;
	width: 24px;
	background-image: url(<%= asset_path 'top-icon-info.png' %>);
	background-position: center center;
	background-repeat: no-repeat;
	background-size: 24px;
}
div.top-nav div.top-item a.messages:hover,
div.top-nav div.top-item a.info:hover {
	opacity: 0.8;
}
div.top-nav div.top-item a.signout {
	padding-left: 20px;
	color: #414141;
	text-decoration: none;
	text-shadow: 1px 1px 0 #FFC483;
	font-weight: 400;
}
div.top-nav div.top-item a.signout:hover {
	color: #222;
}


div.top-nav div.top-item div.info-wrap {
	position: absolute;
	z-index: 10000;
	background: #FFF;
	/*color: red;*/
	width: 200px;
	margin-left: -100px;
	/*border: solid 1px #CCC;*/
	margin-top: 18px;
	box-shadow: 1px 1px 1px #222;
	border-radius: 4px;
}
div.top-nav div.top-item div.info-wrap ul.info-list:after {
	content: '';
  	position: absolute;
  	top: 0;
  	left: 101px;
  	margin-top: -14px;
  	width: 0; height: 0;
  	border-bottom: 14px solid #fff;
  	border-left: 10px solid transparent;
  	border-right: 10px solid transparent;
  	z-index: 2000000;
}
div.top-nav div.top-item div.info-wrap ul.info-list {
	list-style: none;
	margin: 0;
	padding: 0;
	width: 100%;
	border-radius: 4px;
}
div.top-nav div.top-item div.info-wrap ul.info-list li {
	border-bottom: solid 1px #f4f4f4;
  	padding: 8px 10px;
  	font-size: 12px;
  	color: #616161;
  	text-align: left;
}
div.top-nav div.top-item div.info-wrap ul.info-list li span {
	font-weight: bold;
}
div.top-nav div.top-item div.info-wrap ul.info-list li div.notification-time {
	font-size: 11px;
  	color: #CCC;
  	margin-top: 3px;
}
div.top-nav div.top-item div.info-wrap ul.info-list li a.team-link {
	font-weight: bold;
	color: inherit;
	text-decoration: none;
}
div.top-nav div.top-item div.info-wrap ul.info-list li a.team-link:hover {
	text-decoration: underline;
}
div.top-nav div.top-item div.info-wrap ul.info-list li:nth-child(even) {
	
}
div.top-nav div.top-item div.info-wrap ul.info-list li:first-child {
	border-top-left-radius: 4px;
	border-top-right-radius: 4px;
}
div.top-nav div.top-item div.info-wrap ul.info-list li:last-child {
	border-bottom: none;
	border-bottom-left-radius: 4px;
	border-bottom-right-radius: 4px;
}
div.top-nav div.top-item div.info-wrap ul.info-list li div.option-wrap {
	display: table;
	border-spacing: 0;
	border-collapse: separate;
	margin-top: 6px;
}
div.top-nav div.top-item div.info-wrap ul.info-list li div.option-wrap div.option-item {
	display: table-cell;
}
div.top-nav div.top-item div.info-wrap ul.info-list li div.option-wrap div.option-item:first-child {
	padding-right: 4px;
}
div.top-nav div.top-item div.info-wrap ul.info-list li div.option-wrap div.option-item a.btn {
	font-size: 11px !important;
  	width: 50px !important;
  	padding: 7px 10px 5px 10px !important;
}