div.bracket div.bracket_container table.bracket tr td div.game div.teams {
	display: table;
	border-collapse: separate;
	border-spacing: 0;
	width: 100%;
	box-sizing: border-box;
	-moz-box-sizing: border-box;
}
div.bracket div.bracket_container table.bracket tr td div.game div.teams div.teams-item {
	display: table-cell;
	vertical-align: middle;
}
div.bracket div.bracket_container table.bracket tr td div.game div.teams div.teams-item {
	
}
div.bracket div.bracket_container table.bracket tr td div.game div.teams a.teams-item {
	display: table-cell;
	vertical-align: middle;
	width: 17px;
	background: url(<%= asset_path 'magnifier_43x17.png' %>) 4px center no-repeat;
	padding-left: 4px;
}
div.bracket div.bracket_container table.bracket tr td div.game div.teams a.teams-item:hover {
	background-position: right center;
}