table.inbox {

}
table.inbox tr td {

}
table.inbox tr td.list {
	border-right: solid 1px #ccc;
	width: 250px;
	min-width: 250px;
}
table.inbox tr td.body {
	min-width: 350px;
}


input.message-add,textarea.message-input {
	color: #848484;
	font-weight: 300;
	padding: 6px 6px 4px 6px;
	width: 100%;
	border-radius: 3px;
	border: solid 1px #D8D8D8;
	font-size: 14px;
	font-family: helvetica,arial;
}
textarea.message-input {
	margin-top: 10px;
	min-height: 200px;
}
div.message-recipients {
	margin-bottom: 4px;
}
div.message-recipients div.message-recipient {
	float: left;
	font-size: 12px;
	font-weight: 400;
	color: #ccc;
	margin-right: 4px;
}
div.message-recipients div.message-recipient a {
	font-size: 12px;
	color: rgb(0, 158, 255);
	font-weight: 400;
	text-decoration: none;
}
div.message-recipients div.message-recipient a:hover {
	text-decoration: underline;
}
div.message-recipients div.message-label {
	color: #CCC;
	font-size: 12px;
}


ul.messages-list {
	margin: 0;
	padding: 0;
	list-style: none;
}
ul.messages-list li {
	padding: 10px;
	border-top: solid 1px #D8D8D8;
}
ul.messages-list li:first-child {
	border-top: none;
}