div.app_cont div.head.news {
	background: #414141;
	color: #FFF;
	padding-left: 30px;
  	padding-top: 30px;
  	padding-bottom: 24px;
}
div.app_cont div.body div.article.show {
	color: #9D9D9D;
}

div.comments-section {
	background: #494949;
  margin-top: 20px;
  border-radius: 10px;
  padding: 20px;
}

div.comments-section textarea {
	font-size: 13px;
  width: 100%;
  min-height: 100px;
  border: solid 1px #CCC;
  border-radius: 6px;
  margin-bottom: 6px;
  margin-top: 10px;
}

div.comments-section div.comments-label {
	border-bottom: solid 1px #575757;
  padding-bottom: 10px;
}

ul.comments-list {
	list-style: none;
	margin: 0;
	padding: 0;
	margin-top: 10px;
}
ul.comments-list li.comment {
	border-top: solid 1px #525252;
  	border-bottom: solid 1px #3D3D3D;
	padding: 20px 10px;
}
ul.comments-list li.comment:first-child {
	border-top: none;
}
ul.comments-list li.comment:last-child {
	border-bottom: none;
}

ul.comments-list li.comment div.comment-top {
	display: table;
	border-spacing: 0;
	border-collapse: separate;
	width: 100%;
}
ul.comments-list li.comment div.comment-top div.comment-author {
	display: table-cell;
	color: #ffab4a;
	vertical-align: middle;
}
ul.comments-list li.comment div.comment-top div.comment-time {
	display: table-cell;
	color: #8C8C8C;
	font-size: 11px;
	text-align: right;
	vertical-align: middle;
}
ul.comments-list li.comment div.comment-body {
	margin-top: 10px;
}